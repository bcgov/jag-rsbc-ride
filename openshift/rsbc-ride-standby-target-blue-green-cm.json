{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "${NAME}-blue-green-deployment-template",
    "annotations": {
      "description": "Deployment template for Blue/Green ConfigMap.",
      "tags": "rsbc-ride-standby-target-blue-green-cm",
      "iconClass": "icon-java"
    }
  },
  "objects": [
    {
        "apiVersion": "v1",
        "data": {
            "stage_standby_target": "-blue",
            "prod_standby_target": "-blue"
        },
        "kind": "ConfigMap",
        "metadata": {
            "name": "rsbc-ride-standby-target-blue-green-cm",
            "namespace": "be5301-tools"
        }
    }
  ],
  "parameters": [
    {
      "name": "NAME",
      "displayName": "Name",
      "description": "The name assigned to all of the OpenShift resources associated to the server instance.",
      "required": true,
      "value": "rsbc-ride"
    },
    {
      "name": "SUFFIX",
      "description": "A suffix appended to most objects",
      "displayName": "Application Suffix",
      "value": ""
    }
  ]
}
